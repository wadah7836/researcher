@page
@model StatsModel

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8" />
  <title>صفحة الإحصائيات - الباحثين</title>
  <link rel="stylesheet" href="~/css/stats.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
</head>
<body>

<h1>احصائيات باحثي هيئة البحث العلمي</h1>

<div class="total-count">
  <div class="total-card">
    <i class="fas fa-user-graduate"></i>
    <h4>عدد الباحثين الكلي</h4>
    <span id="totalCount">--</span>
  </div>
  <div class="total-card">
    <i class="fas fa-graduation-cap"></i>
    <h4>حملة الدكتوراه</h4>
    <span id="phdCount">--</span>
  </div>
  <div class="total-card">
    <i class="fas fa-book-reader"></i>
    <h4>حملة الماجستير</h4>
    <span id="masterCount">--</span>
  </div>
  <div class="total-card">
    <i class="fas fa-award"></i>
    <h4>حملة الدبلوم العالي</h4>
    <span id="diplomaCount">--</span>
  </div>
</div>

<div class="search-box">
  <select id="workplaceSelect">
    <option value="">هيئة البحث العلمي</option>
  </select>

  <select id="fieldSelect">
    <option value="">اختر الحقل</option>
    <option value="name">الاسم</option>
    <option value="email">البريد الإلكتروني</option>
    <option value="bio">النبذة</option>
    <option value="skills">مهارات البرمجيات</option>
    <option value="academic_title">اللقب العلمي</option>
    <option value="degree">الشهادة</option>
    <option value="general_specialization">الاختصاص العام</option>
    <option value="specific_specialization">الاختصاص الدقيق</option>
  </select>

  <select id="valueSelect">
    <option value="">اختر القيمة</option>
  </select>

  <button id="searchBtn">بحث</button>
</div>

<div id="results" class="results"></div>

<div id="workStats" class="work-stats"></div>

<script type="module" src="~/js/stats.js"></script>
</body>
</html>
