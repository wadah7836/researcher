@page
@model MyResearcherApp.Pages.EditModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8" />
  <title>تعديل بيانات الباحث</title>
  <link rel="stylesheet" href="/css/edit.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>

<h2>نموذج تعديل بيانات الباحث</h2>

<form id="editForm" autocomplete="off">
  <!-- المعلومات الشخصية -->
  <div class="section">
    <h3>المعلومات الشخصية</h3>
    <label>الاسم</label><input id="name" />
    <label>الاسم بالعربية</label><input id="name_ar" />
    <label>الاسم بالإنجليزية</label><input id="name_en" />
    <label>التولد</label><input id="birthdate" type="text" placeholder="YYYY-MM-DD" />
    <label>اللقب العلمي</label><input id="academic_title" />
    <label>الشهادة</label><input id="degree" />
    <label>الاختصاص العام</label><input id="general_specialization" />
    <label>الاختصاص الدقيق</label><input id="specific_specialization" />
    <label>البريد الإلكتروني</label><input id="email" />
    <label>مكان العمل</label><input id="specialization" />
    <label>السيرة الذاتية</label><textarea id="bio" rows="4"></textarea>
    <label>مهارات البرمجيات</label><textarea id="skills" rows="3"></textarea>
  </div>

  <!-- التعليم -->
  <div class="section">
    <h3>التعليم</h3>
    <button type="button" class="add-row-btn" data-table="education">+ إضافة صف</button>
    <table id="education"><thead><tr><th>الشهادة</th><th>الجامعة</th><th>الكلية</th><th>البلد</th><th>التاريخ</th></tr></thead><tbody></tbody></table>
  </div>

  <!-- الألقاب العلمية -->
  <div class="section">
    <h3>الألقاب العلمية</h3>
    <button type="button" class="add-row-btn" data-table="titles">+ إضافة صف</button>
    <table id="titles"><thead><tr><th>اللقب</th><th>تاريخ الحصول</th></tr></thead><tbody></tbody></table>
  </div>

  <!-- الشهادات الأخرى -->
  <div class="section">
    <h3>الشهادات الأخرى</h3>
    <button type="button" class="add-row-btn" data-table="certificates">+ إضافة صف</button>
    <table id="certificates"><thead><tr><th>الشهادة</th><th>التاريخ</th><th>الوصف</th></tr></thead><tbody></tbody></table>
  </div>

  <!-- إشراف الطلبة -->
  <div class="section">
    <h3>إشراف الطلبة</h3>
    <button type="button" class="add-row-btn" data-table="students">+ إضافة صف</button>
    <table id="students"><thead><tr><th>الاسم</th><th>التاريخ</th><th>الوصف</th></tr></thead><tbody></tbody></table>
  </div>

  <!-- المناصب الإدارية -->
  <div class="section">
    <h3>المناصب الإدارية</h3>
    <button type="button" class="add-row-btn" data-table="positions">+ إضافة صف</button>
    <table id="positions"><thead><tr><th>المنصب</th><th>من</th><th>إلى</th></tr></thead><tbody></tbody></table>
  </div>

  <!-- الجوائز والتكريمات -->
  <div class="section">
    <h3>الجوائز والتكريمات</h3>
    <button type="button" class="add-row-btn" data-table="awards">+ إضافة صف</button>
    <table id="awards"><thead><tr><th>الاسم</th><th>الوصف</th><th>التاريخ</th></tr></thead><tbody></tbody></table>
  </div>

  <!-- الإنجازات العلمية -->
  <div class="section">
    <h3>إنجازات الباحث</h3>

    <h4>المؤتمرات</h4>
    <button type="button" class="add-row-btn" data-table="conferences">+ إضافة صف</button>
    <table id="conferences"><thead><tr><th>العنوان</th><th>التفاصيل</th><th>السنة</th></tr></thead><tbody></tbody></table>

    <h4>ورش العمل</h4>
    <button type="button" class="add-row-btn" data-table="workshops">+ إضافة صف</button>
    <table id="workshops"><thead><tr><th>العنوان</th><th>التفاصيل</th><th>السنة</th></tr></thead><tbody></tbody></table>

    <h4>الكتب</h4>
    <button type="button" class="add-row-btn" data-table="books">+ إضافة صف</button>
    <table id="books"><thead><tr><th>العنوان</th><th>التفاصيل</th><th>السنة</th></tr></thead><tbody></tbody></table>

    <h4>براءات الاختراع</h4>
    <button type="button" class="add-row-btn" data-table="patents">+ إضافة صف</button>
    <table id="patents"><thead><tr><th>العنوان</th><th>التفاصيل</th><th>السنة</th></tr></thead><tbody></tbody></table>

    <h4>الدورات</h4>
    <button type="button" class="add-row-btn" data-table="courses">+ إضافة صف</button>
    <table id="courses"><thead><tr><th>العنوان</th><th>التفاصيل</th><th>السنة</th></tr></thead><tbody></tbody></table>
  </div>

  <!-- روابط الباحث -->
  <div class="section">
    <h3>روابط الباحث (Google Scholar, ORCID...)</h3>
    <button type="button" class="add-row-btn" data-table="links">+ إضافة رابط</button>
    <table id="links">
      <thead><tr><th>نوع الرابط</th><th>الرابط</th></tr></thead><tbody></tbody>
    </table>
  </div>

  <!-- الإحصائيات العلمية -->
  <div class="section">
    <h3>الإحصائيات العلمية لكل موقع</h3>
    <table class="stats-table">
      <thead>
        <tr>
          <th>الإحصائية</th>
          <th><i class="fab fa-google"></i> Google Scholar</th>
          <th><i class="fas fa-chart-bar"></i> Scopus</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>عدد البحوث</td>
          <td><input id="numPubsGS" type="number" min="0" /></td>
          <td><input id="numPubsScopus" type="number" min="0" /></td>
        </tr>
        <tr>
          <td>عدد الاستشهادات</td>
          <td><input id="numCitesGS" type="number" min="0" /></td>
          <td><input id="numCitesScopus" type="number" min="0" /></td>
        </tr>
        <tr>
          <td>H‑Index</td>
          <td><input id="hIndexGS" type="number" min="0" /></td>
          <td><input id="hIndexScopus" type="number" min="0" /></td>
        </tr>
      </tbody>
    </table>
  </div>

  <button type="submit">حفظ</button>
  <p id="saveMsg"></p>
</form>

<script type="module" src="/js/edit.js"></script>
</body>
</html>
