<script type="module" src="@Url.Content("~/js/supabase-handler.js")"></script>

<script>
    const headerBubblesContainer = document.querySelector('.header-bubbles');

    function createBubble() {
        const bubble = document.createElement('div');
        bubble.classList.add('bubble-head');

        const size = Math.random() * 40 + 20;
        bubble.style.width = `${size}px`;
        bubble.style.height = `${size}px`;
        bubble.style.left = `${Math.random() * 100}%`;
        bubble.style.animationDuration = `${10 + Math.random() * 10}s`;
        bubble.style.opacity = 0.5 + Math.random() * 0.5;

        headerBubblesContainer.appendChild(bubble);
        setTimeout(() => {
            bubble.remove();
        }, 15000);
    }

    setInterval(createBubble, 1200);
</script>

